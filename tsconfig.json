{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM","ESNext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "declaration": true,
    "declarationDir": "./lib",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["./node_modules/**/*"]
}